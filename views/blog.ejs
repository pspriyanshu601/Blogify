<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <title>Document</title>
</head>
<body>
<%-include("./partials/script.ejs")%>
<%- include("./partials/nav.ejs") %>
<main class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" class="img-fluid" alt="Cover Image">
    <pre><%= blog.body %></pre>
</main>

<div class="container mt-4">
    <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Profile Image" width="50px">
    <%= blog.createdBy.fullName %>

</div>



<% if (locals.user) { %>
    <div class="container mt-3">
        <form action="comment/<%= blog.id %>" method="post">
            <div class="mb-3">
                
                <textarea class="form-control" id="commentInput" name="content" placeholder="Enter your Comment" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<% } %>
<div class="mt-3">
     <br>
     <div class="container mt-4"><label for="commentInput" class="form-label"><h3>Comments(<%= comments.length %>)</h3></label>
     </div>
     <% comments.forEach(comment => { %>
          <div class="container mt-4">
               <p><img src="<%= comment.createdBy.profileImageURL %>" alt="Author Profile Image" width="50px">
               <%= comment.createdBy.fullName %> :<%= comment.content %></p>
           </div>
     <% }) %>
</div>
</body>
</html>
